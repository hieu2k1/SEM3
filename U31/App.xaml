<Application
    x:Class="U31.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:U31">

    <Application.Resources>
        <SolidColorBrush x:Key="MyBrush" Color="Brown"/>
        <x:String x:Key="greeting">Hello world</x:String>

        <Style TargetType="Button" x:Key="MyButtonStyle">
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontSize" Value="36"/>
        </Style>

        <Style TargetType="Image" x:Key="WhiteLogoStyle">
            <Setter Property="Source" Value="Assets/U31/white-logo.png"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="20,20,20,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelTextBlockStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="Margin" Value="20,20,20,0"/>
        </Style>
    </Application.Resources>
</Application>
